<tal:viewlet omit-tag="" condition="view/available">

    <div tal:define="hebergements view/getHebergements;
                     autresinfos view/getAllMapData;
                     mapInfos view/getMapInfos;
                     checkboxes view/getCheckboxes">

        <script type="text/javascript" tal:content="structure string:
            <!--
              var hebergementsJSON = ${hebergements};
              var infosJSON = ${autresinfos};
              var mapInfosJSON = ${mapInfos};
            -->">
        </script>

        <div id="map_div" >
        </div>

        <div id="menu">

            <tal:if condition="python: 'gites' in checkboxes">
                <input type="checkbox" name="primary_box" id="gites" value="gites" checked>
                <label i18n:translate="Gites" for="gites">Gites</label><br />
            </tal:if>

            <tal:if condition="python: 'chambres' in checkboxes">
                <input type="checkbox" name="primary_box" id="chambres" value="chambres" checked>
                <label i18n:translate="Chambres" for="chambres">Chambres</label><br />
            </tal:if>

            <tal:if condition="python: 'infotouristique' in checkboxes">
                <input type="checkbox" name="primary_box" id="infotouristique" value="infotouristique" checked>
                <label i18n:translate="Infos_touristiques" for="infotouristique">Infos touristiques</label><br />
            </tal:if>

            <tal:if condition="python: 'infopratique' in checkboxes">
                <input type="checkbox" name="primary_box" id="infopratique" value="infopratique" checked>
                <label i18n:translate="Infos_pratiques" for="infopratique">Infos pratiques</label><br />
            </tal:if>

            <tal:if condition="python: 'maisontourisme' in checkboxes">
                <input type="checkbox" name="primary_box" id="maisontourisme" value="maisontourisme" checked>
                <label i18n:translate="Maison_du_tourisme" for="maisontourisme">Maison du tourisme</label><br />
            </tal:if>

            <tal:if condition="python: 'restaurant' in checkboxes">
                <input type="checkbox" name="primary_box" id="restaurant" value="restaurant" checked>
                <label i18n:translate="Restaurants" for="restaurant">Restaurants</label><br />
            </tal:if>

            <tal:if condition="python: 'evenementquefaire' in checkboxes">
                <input type="checkbox" name="primary_box" id="evenementquefaire" value="evenementquefaire" checked>
                <label i18n:translate="Evenements" for="evenementquefaire">&Eacute;v&eacute;nements</label><br />
            </tal:if>

            <tal:if condition="python: 'bakery' in checkboxes">
                <input type="checkbox" name="secondary_box" id="bakery" value="bakery">
                <label i18n:translate="Bakery" for="bakery">Boulangerie</label><br />
            </tal:if>

            <tal:if condition="python: 'art_gallery' in checkboxes">
                <input type="checkbox" name="secondary_box" id="art_gallery" value="art_gallery">
                <label i18n:translate="Art_gallery" for="art_gallery">Gallerie d'art</label><br />
            </tal:if>

            <tal:if condition="python: 'casino' in checkboxes">
                <input type="checkbox" name="secondary_box" id="casino" value="casino">
                <label i18n:translate="Casino" for="casino">Casino</label><br />
            </tal:if>

            <input type="button" id="bound_button" value="bound!" />
        </div>

    </div>

</tal:viewlet>
